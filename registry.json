      "files": [
        {
          "path": "registry/map/index.ts",
          "type": "registry:utils"
        },
        {
          "path": "registry/map/Map.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MapMarker.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MarkerContent.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MarkerPopup.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MarkerTooltip.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MarkerLabel.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MapPopup.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MapControls.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MapRoute.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/MapClusterLayer.vue",
          "type": "registry:component"
        },
        {
          "path": "registry/map/constants.ts",
          "type": "registry:utils"
        },
        {
          "path": "registry/map/composables/useMap.ts",
          "type": "registry:hook"
        },
        {
          "path": "registry/map/composables/useMarker.ts",
          "type": "registry:hook"
        },
        {
          "path": "registry/map/composables/useResolvedTheme.ts",
          "type": "registry:hook"
        }
      ],
      "css": {
        "@layer base": {
          ".maplibregl-popup-content": {
             "@apply bg-transparent! shadow-none! p-0! rounded-none!": {}
          },
          ".maplibregl-popup-tip": {
            "@apply hidden!": {}
          }
        }
      }
    }
  ]
